{% extends 'menu.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="tableWrapper">
        <h1>User</h1>

        <table class="overview">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
                <th>password</th>
                <td>{{ user.password }}</td>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('users_index') }}">back to list</a>

        <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>

        {{ include('users/_delete_form.html.twig') }}
    </div>
{% endblock %}
